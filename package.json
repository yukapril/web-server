{
  "name": "web-server",
  "version": "1.0.0",
  "description": "A web server with Electron.",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder build --mac --linux --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yukapril/web-server.git"
  },
  "keywords": [
    "web",
    "static",
    "server"
  ],
  "author": {
    "name": "yukapril",
    "email": "i@yukapril.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yukapril/web-server/issues"
  },
  "homepage": "https://github.com/yukapril/web-server#readme",
  "devDependencies": {
    "electron": "^7.1.1",
    "electron-builder": "^22.1.0"
  },
  "dependencies": {
    "koa": "2.11.0",
    "koa-static-with-spa": "^5.0.0"
  },
  "build": {
    "appId": "com.yukapril.electron.webServer",
    "productName": "Web Server",
    "copyright": "Copyright Â© 2019 ${author}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "www/**/*",
      "electron/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/www.png",
      "target": [
        "zip"
      ]
    },
    "win": {
      "icon": "build/www.png",
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "zip",
        "AppImage"
      ]
    }
  }
}
